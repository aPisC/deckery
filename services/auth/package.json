{
  "name": "@deckery/auth",
  "private": true,
  "version": "1.0.0",
  "devDependencies": {
    "typescript": "^4.6.2"
  },
  "scripts": {
    "check": "npm run format && npm run lint",
    "format": "prettier --write \"src/**/*.+(ts|js|yml|yaml|json)\"",
    "lint": "eslint .",
    "start": "node dist/index.js",
    "test": "NODE_ENV=test jest'",
    "dev": "concurrently \"npm:dev:ts\" \"npm:dev:js\"",
    "dev:ts": "tsc -b -w",
    "dev:js": "nodemon",
    "build": "tsc --build"
  },
  "nodemonConfig": {
    "pollingInterval": 100,
    "legacyWatch": true,
    "watch": [
      "dist"
    ],
    "ext": "js",
    "exec": "node --inspect  ./dist/index.js"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^8.5.8",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa-compress": "^4.0.3",
    "@types/koa-cors": "^0.0.2",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-router": "^7.4.4",
    "@types/node": "^17.0.23",
    "@types/sequelize": "^4.28.11",
    "@types/validator": "^13.7.2",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.1.0",
    "koa-cors": "^0.0.16",
    "koa-helmet": "^6.1.0",
    "koa-jwt": "^4.0.3",
    "koa-logger": "^3.2.1",
    "koa-router": "^10.1.1",
    "nodemon": "^2.0.15",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.17.0",
    "sequelize-typescript": "^2.1.3",
    "sqlite": "^4.0.25",
    "sqlite3": "^5.0.2",
    "ts-node": "^10.7.0"
  }
}
